                            method: 'GET',
                            success: (data) => {
                                $('#usersCount').text(data.allUsers)
                                $('#songsToVerifyCount').text(data.allVerifications)
                                $('#newestUser').text(data.newestUser)
                                $('#songsInQueueCount').text(data.allQueue)
                            }
                        })
