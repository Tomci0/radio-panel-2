                    <div class="row">

                        <!-- Area Chart -->
                        <div class="col">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Najbliższe piosenki</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div id="loading-element-queue-short" class="d-flex justify-content-center align-items-center" style="height: 100%;">
                                        <div class="spinner-border" role="status">
                                            <span style="opacity:0;" class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                    <ul id="songsQueue-short" class="list-group list-group-flush border-bottom music-list w-100" style="display: none;">
                                        <script>
                                            
                                        </script>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Pie Chart -->
                        <div class="col">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-primary">Piosenki do weryfikacji</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div id="loading-element-verify-short" class="d-flex justify-content-center align-items-center" style="height: 100%;">
                                        <div class="spinner-border" role="status">
                                            <span style="opacity:0;" class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                    <ul id="songsToVerify-ShortList" class="list-group list-group-flush border-bottom music-list w-100" style="display: none;">
                                        
                                        
                                    </ul>

                                    <script>

                                        $.ajax({
                                            url: '/api/getSongsToVerify',
                                            method: 'GET',
                                            success: (data) => {
                                                if (data.songs.length === 0) {
                                                    $('.border-bottom').removeClass('border-bottom')
                                                    $('#loading-element-verify-short').fadeOut(500).remove()
                                                    $('#songsToVerify-ShortList').fadeIn(500)
                                                    $('#songsToVerify-ShortList').append(`
                                                        <div class="alert alert-primary text-center" role="alert">
                                                            Brak piosenek do weryfikacji
                                                        </div>
                                                    `)
                                                    return
                                                }

                                                data.songs.forEach((verify, index) => {

                                                    if (index > 5) return
                                                    
                                                    if (verify) {
                                                        $('#songsToVerify-ShortList').append(`
                                                            <li class="list-group-item">
                                                                <div class="container">
                                                                    <div class="row d-flex justify-content-center align-items-center text-center">
                                                                        <div class="col-12 col-xl-4">
                                                                            <img src="${verify.song.thumbnail}" class="rounded" alt="...">
                                                                        </div>
                                                                        <div class="col-12 col-xl-8 mt-3">
                                                                            <div class="row d-flex justify-content-center fw-bold">
                                                                                ${verify.song.authors} - ${verify.song.title}
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </li>
                                                        `)
                                                    }
                                                });

                                                setTimeout(() => {
                                                    $('#loading-element-verify-short').fadeOut(500).remove()
                                                    $('#songsToVerify-ShortList').fadeIn(500)
                                                }, 500)
                                            }
                                        })
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                        $.ajax({
