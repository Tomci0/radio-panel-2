<!-- HEADER FOR PC -->

<div class="container">
    <header
        class="d-none d-lg-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4">
        <div class="col-md-3 mb-2 mb-md-0">
            <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                <img src="/images/zs14-logo.png" class="rounded-circle" height="48">
            </a>
        </div>

        <ul id="navbar" class="nav nav-pills col-12 col-md-auto mb-2 justify-content-center mb-md-0 gap-3">
            <li class="nav-item"><a href="/" class="btn nav-link <%= url=='index'?'active':'' %>" data-bs-toggle="tooltip"
                    data-bs-placement="bottom" data-bs-custom-class="custom-tooltip" data-bs-title="Strona Główna">
                    <span class="iconify" data-icon="mdi:home"></span>
                </a>
            </li>
            <li class="nav-item"><a href="/queue" class="btn nav-link <%= url=='queue'?'active':'' %>" data-bs-toggle="tooltip"
                    data-bs-placement="bottom" data-bs-custom-class="custom-tooltip" data-bs-title="Kolejka">
                    <span class="iconify" data-icon="mdi:playlist-music"></span>
                </a>
            </li>

            <!-- ONLY FOR LOGGED USER -->

            <% if (userdata.isLogged) { %>
                <li class="nav-item"><a href="/request" class="btn nav-link <%= url=='request'?'active':'' %>" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-custom-class="custom-tooltip" data-bs-title="Dodaj Piosenkę">
                        <span class="iconify" data-icon="mdi:plus"></span>
                    </a>
                </li>
            <% } %>
        </ul>
        <div class="col-3 text-end">

            <!-- BEFORE LOGIN -->

            <% if (!userdata.isLogged) { %>

                <button id="theme-toggle" type="button" class="btn btn-sm me-3">
                    <span class="iconify" data-icon="mdi:weather-night" id="theme-icon"></span>
                </button>
                <a href="/auth/google">
                    <button href="/auth/google" id="login-btn" type="button" class="btn btn-outline-danger me-2">
                        <span class="icon">
                            <span class="iconify" data-icon="mdi:google-plus"></span>
                        </span>
                        <span class="ms-1">Zaloguj się</span>
                    </button>
                </a>
            <% } %>

            <!-- AFTER LOGIN -->

            <% if (userdata.isLogged) { %>

                <div class="dropdown">
                    <div class="d-flex justify-content-end">
                        <a id="theme-toggle" type="button" class="btn btn-sm me-3" data-bs-toggle="tooltip"
                            data-bs-placement="bottom" data-bs-custom-class="custom-tooltip"
                            data-bs-title="Zmień motyw">
                            <span class="iconify" data-icon="mdi:weather-night" id="theme-icon"></span>
                        </a>
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="<%= userdata.picture %>" width="32" height="32" class="rounded-circle">
                            <span class="ms-1"><%= userdata.given_name %></span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end text-small" aria-labelledby="dropdownUser1">
                            <% if (userdata.isAdmin) { %>
                                <li><a class="dropdown-item" href="/admin">Admin Panel</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                            <% } %>
                            <li><a class="dropdown-item" href="/auth/logout">Wyloguj się</a></li>
                        </ul>
                    </div>
                </div>
            <% } %>
        </div>
    </header>
</div>

<!-- HEADER FOR MOBILE -->

<nav class="navbar d-flex d-lg-none" style="z-index: 999;">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent"
